---
import { getCollection } from "astro:content";

const books = await getCollection("book");
---

<ul class="mt-8 space-y-3">
  {
    books.map((book) => (
      <li class="group">
        <div class="bg-neutral-50 dark:bg-neutral-200 border border-neutral-200 dark:border-neutral-400 rounded-lg p-4 hover:shadow-sm transition-shadow duration-normal ease-smooth">
          <a
            class="text-lg font-semibold text-neutral-900 dark:text-neutral-900 group-hover:text-primary transition-colors duration-normal ease-smooth"
            href={book.data.url}
            target="_blank"
            rel="noopener"
          >
            {book.data.shortTitle}
          </a>
          <span class="text-neutral-800 dark:text-neutral-900"> by {book.data.author}</span>
        </div>
      </li>
    ))
  }
</ul>

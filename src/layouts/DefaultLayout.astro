---
import Footer from "~/components/Footer.astro";
import Navbar from "~/components/Navbar.astro";
import BaseLayout from "./BaseLayout.astro";
---

<BaseLayout {...Astro.props}>
  <div class="flex min-h-screen flex-col pb-4 pt-8 sm:px-4">
    <div class="mx-auto mb-auto w-full max-w-3xl">
      <Navbar />

      <div class="mx-auto my-20 max-w-2xl grow md:my-10">
        <slot />
      </div>
    </div>

    <Footer />
  </div>
</BaseLayout>

<link href="/assets/styles/prism.css?v={{ global.timestamp }}" rel="stylesheet" data-helmet />

<div class="mb-8">
  <h2 class="text-2xl mb-4">Blog</h2>

  <p>My thoughts on making computers do stuff.</p>
</div>

<ul class="space-y-6">
  {% for post in collections.posts reversed %}
  <li class="pb-6 border-b border-gray-300 border-solid">
    <a href="{{ post.url }}">
      <h3 class="text-xl text-vBlue">{{ post.data.title }}</h3>
    </a>

    <small class="mt-2">
      {{ post.data.date | formatDate }} ãƒ»
      {{ post.templateContent | readingTime }} min read
    </small>

    <p class="mt-4 prose dark:prose-light">{{ post.data.description }}</p>
  </li>
  {% endfor %}
</ul>

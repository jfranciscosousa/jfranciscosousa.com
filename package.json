{
  "name": "jfranciscosousa.com",
  "description": "My personal website",
  "author": "Francisco Sousa",
  "homepage": "https://github.com/jfranciscosousa/jfranciscosousa.com",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist src/_includes/assets .data-cache",
    "eleventy:default": "npx eleventy",
    "eleventy:watch": "npx eleventy --watch",
    "styles:prod": "yarn parcel build src/styles/*.css --out-dir src/_includes/assets --no-source-maps",
    "styles:dev": "NODE_ENV=development yarn parcel build src/styles/index.css --out-dir src/_includes/assets --no-source-maps --no-minify",
    "styles:watch": "yarn parcel watch src/styles/*.css --out-dir src/_includes/assets --no-source-maps --no-hmr",
    "scripts:prod": "yarn parcel build src/scripts/*.js --out-dir dist/scripts --no-source-maps",
    "scripts:dev": "NODE_ENV=development yarn parcel build src/scripts/*.js --out-dir dist/scripts --no-source-maps --no-minify",
    "scripts:watch": "parcel watch src/scripts/*.js --out-dir dist/scripts --public-url .",
    "assets:prod": "npm-run-all --parallel styles:prod scripts:prod",
    "serve-files": "serve dist",
    "livereload": "livereload dist",
    "optimize-fonts": "subfont $(find dist -name '*.html' | sed ':a;N;$!ba;s/\\n/ /g') --in-place --inline-fonts --font-display block",
    "dev": "npm-run-all styles:dev scripts:dev eleventy:default --parallel eleventy:watch styles:watch scripts:watch serve-files livereload --print-label",
    "dev:debug": "DEBUG=* npm run dev",
    "build": "NODE_ENV=production run-s clean assets:prod eleventy:default optimize-fonts --print-label",
    "lint": "eslint src .eleventy.js --ignore-pattern !.eleventy.js",
    "lint-styles": "stylelint 'src/**/*.css'",
    "lint-templates": "prettier --check src/**/*.njk --parser html"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^7.4.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "livereload": "^0.9.1",
    "pa11y-ci": "^2.3.0",
    "prettier": "^2.0.3",
    "serve": "^11.3.2",
    "stylelint": "^13.3.0",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-order": "^4.0.0"
  },
  "dependencies": {
    "@11ty/eleventy": "^0.11.0",
    "@11ty/eleventy-plugin-rss": "^1.0.7",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.1",
    "@mightyplow/eleventy-plugin-cache-buster": "^1.1.3",
    "@navillus/eleventy-plugin-inline-css": "^1.0.3",
    "axios": "^0.19.2",
    "eleventy-plugin-lazyimages": "https://github.com/liamfiddler/eleventy-plugin-lazyimages",
    "eslint-plugin-prettier": "^3.1.2",
    "html-minifier": "^4.0.0",
    "jsdom": "^16.4.0",
    "markdown-it": "^11.0.0",
    "markdown-it-link-attributes": "^3.0.0",
    "moment": "^2.26.0",
    "normalize.css": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "parcel": "^1.12.4",
    "postcss-easy-import": "^3.0.0",
    "precss": "^4.0.0",
    "purgecss": "^2.3.0",
    "subfont": "^5.2.1",
    "xml2js": "^0.4.23"
  }
}

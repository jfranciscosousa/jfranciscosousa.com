{
  "name": "jfranciscosousa.com",
  "description": "My personal website",
  "author": "Francisco Sousa",
  "homepage": "https://github.com/jfranciscosousa/jfranciscosousa.com",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist src/_includes/assets .parcel-cache",
    "eleventy:default": "npx eleventy",
    "eleventy:watch": "npx eleventy --watch",
    "serve-files": "serve dist",
    "livereload": "livereload dist",
    "webpack": "node_modules/webpack/bin/webpack.js --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "webpack:watch": "yarn webpack --watch",
    "dev": "NODE_ENV=development npm-run-all webpack --parallel webpack:watch eleventy:watch serve-files livereload --print-label",
    "optimize-fonts": "subfont $(find dist -name '*.html') --in-place --no-fallbacks --inline-fonts",
    "build": "PURGE_CSS=true NODE_ENV=production run-s clean webpack eleventy:default optimize-fonts --print-label",
    "lint": "eslint src",
    "lint-styles": "stylelint \"src/**/*.css\" \"src/**/*.scss\""
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^7.9.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "livereload": "^0.9.1",
    "pa11y-ci": "^2.4.0",
    "prettier": "^2.1.2",
    "serve": "^11.3.2",
    "stylelint": "^13.7.1",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-order": "^4.0.0"
  },
  "dependencies": {
    "@11ty/eleventy": "^0.11.0",
    "@11ty/eleventy-plugin-rss": "^1.0.9",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.1",
    "@mightyplow/eleventy-plugin-cache-buster": "^1.1.3",
    "@navillus/eleventy-plugin-inline-css": "^1.0.3",
    "axios": "^0.20.0",
    "eleventy-plugin-lazyimages": "https://github.com/liamfiddler/eleventy-plugin-lazyimages",
    "eslint-plugin-prettier": "^3.1.2",
    "html-minifier": "^4.0.0",
    "jsdom": "^16.4.0",
    "laravel-mix": "^5.0.5",
    "laravel-mix-postcss-config": "^1.0.4",
    "markdown-it": "^11.0.1",
    "markdown-it-link-attributes": "^3.0.0",
    "moment": "^2.28.0",
    "normalize.css": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "pjax": "^0.2.8",
    "postcss-easy-import": "^3.0.0",
    "postcss-preset-env": "^6.7.0",
    "purgecss": "^2.3.0",
    "subfont": "^5.2.2",
    "xml2js": "^0.4.23"
  }
}

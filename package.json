  "browserslist": ">2.5%",
  "scripts": {
    "clean": "rm -rf _output .data-cache .image-cache dist",
    "dev": "NODE_ENV=development snowpack dev",
    "inline-css": "node_modules/.bin/critical dist/index.html --include /html/  --base build --inline > dist/index.inline.html && mv dist/index.inline.html dist/index.html",
    "build": "NODE_ENV=production snowpack build && yarn inline-css && yarn hash-assets dist",
    "lint-styles": "stylelint \"assets/**/*.css\" \"assets/**/*.scss\""
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.11.0",
    "@11ty/eleventy-plugin-rss": "^1.1.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.6",
    "@snowpack/plugin-postcss": "^1.1.0",
    "@snowpack/plugin-run-script": "^2.3.0",
    "@tailwindcss/typography": "^0.4.0",
    "autoprefixer": "^10.2.1",
    "axios": "^0.21.1",
    "critical": "^2.0.6",
    "cssnano": "^4.1.10",
    "cssnano-preset-advanced": "^4.0.7",
    "eleventy-plugin-helmet": "^0.2.1",
    "eleventy-plugin-lazyimages": "https://github.com/liamfiddler/eleventy-plugin-lazyimages",
    "html-minifier": "^4.0.0",
    "jsdom": "^16.4.0",
    "markdown-it": "^12.0.4",
    "markdown-it-link-attributes": "^3.0.0",
    "moment": "^2.28.0",
    "netlify-plugin-cache": "^1.0.3",
    "pa11y-ci": "^2.4.0",
    "postcss": "^8.2.4",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^14.0.0",
    "prettier": "^2.2.1",
    "purgecss": "^3.1.3",
    "snowpack": "^3.0.11",
    "stylelint": "^13.7.1",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-order": "^4.0.0",
    "tailwindcss": "^2.0.2",
    "xml2js": "^0.4.23"
  },
  "dependencies": {
    "@ryanburnette/hash-assets": "^1.1.0",
    "instant.page": "^5.1.0",
    "turbolinks": "^5.2.0"
  }
}

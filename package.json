{
  "name": "jfranciscosousa.com",
  "description": "My personal website",
  "version": "1.0.0",
  "author": "Francisco Sousa",
  "homepage": "https://github.com/jfranciscosousa/jfranciscosousa.com",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist",
    "eleventy:default": "npx eleventy",
    "eleventy:watch": "npx eleventy --watch",
    "styles:prod": "mkdir -p dist/styles && cp -r src/styles/* dist/styles/ && postcss ./dist/styles/*.css --replace",
    "styles:dev": "postcss src/styles/index.css -o ./dist/styles/index.css --watch --verbose",
    "scripts:prod": "webpack --mode=production",
    "scripts:dev": "webpack --watch --mode=development",
    "serve": "browser-sync start --config bs-config.js",
    "dev": "npm-run-all clean eleventy:default --parallel eleventy:watch styles:dev scripts:dev serve --print-label",
    "dev:debug": "DEBUG=* npm run dev",
    "build": "NODE_ENV=production run-s clean styles:prod scripts:prod eleventy:default --print-label",
    "lint": "eslint src .eleventy.js --ignore-pattern !.eleventy.js",
    "lint-styles": "stylelint 'src/**/*.css'",
    "lint-templates": "prettier --check src/**/*.njk --parser html"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "browser-sync": "^2.26.7",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "pa11y-ci": "^2.3.0",
    "prettier": "^2.0.3",
    "stylelint": "^13.3.0",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-order": "^4.0.0"
  },
  "dependencies": {
    "@11ty/eleventy": "^0.10.0",
    "@11ty/eleventy-plugin-rss": "^1.0.7",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.1",
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@fullhuman/postcss-purgecss": "^2.1.0",
    "@mightyplow/eleventy-plugin-cache-buster": "^1.1.3",
    "autoprefixer": "^9.7.5",
    "axios": "^0.19.2",
    "babel-loader": "^8.1.0",
    "cssnano": "^4.1.10",
    "cssnano-preset-advanced": "^4.0.7",
    "eleventy-plugin-lazyimages": "https://github.com/jfranciscosousa/eleventy-plugin-lazyimages",
    "eslint-plugin-prettier": "^3.1.2",
    "fontfaceobserver": "^2.1.0",
    "html-minifier": "^4.0.0",
    "instant.page": "^5.1.0",
    "markdown-it": "^11.0.0",
    "markdown-it-link-attributes": "^3.0.0",
    "moment": "^2.26.0",
    "normalize.css": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.0",
    "postcss-easy-import": "^3.0.0",
    "precss": "^4.0.0",
    "turbolinks": "^5.2.0",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.9",
    "xml2js": "^0.4.23"
  }
}
